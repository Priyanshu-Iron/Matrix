<% include ./partials/header.ejs%>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <div class="flex flex-row items-center justify-between">
            <h1 class="text-xl">Create a new Post</h1>
            <h1 class="text-md opacity-60">Max Post Size : 4.2mb</h1>
        </div>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class=" block w-1/3 px-3 py-2" type="file" name="postimage">
            <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2 outline-red-600 " type="text" placeholder="Title" name="title">
            <textarea class="text-black block w-1/3 h-60 px-3 py-2 border-2 rounded-md mt-2 outline-red-600 " type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-700" type="submit" value="Create Post">
        </form>
    </div>
<% include ./partials/footer.ejs%>