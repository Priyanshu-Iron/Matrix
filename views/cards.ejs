<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem) { %>
            <div class="cards w-full">
                <div class="w-full min-h-screen">
                    <!-- Update the anchor tag to link to the single post page using the post's ID -->
                    <a href="/feed/post/<%= elem._id %>">
                        <img class="w-full h-full object-cover" src="<%= elem.image %>" alt="Post Image">
                    </a>
                </div>
                <h5 class="mt-2 text-xl"><%= elem.title %></h5>
                <h5 class="mt-2 text-md"><%= elem.description %></h5>
                <h6 class="text-sm font-semibold opacity-500">@<%= elem.user.username %></h6>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
